<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/activityBackground</item>
    </style>

    <style name="loginTheme" parent="Theme.AppCompat.NoActionBar">
    </style>

    <style name="myEmployeesLabel">
        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textWhite</item>
    </style>

    <style name="xlargeLabel" parent="myEmployeesLabel">
        <item name="android:textSize">@dimen/xlarge_text</item>
    </style>

    <style name="largeLabel" parent="myEmployeesLabel">
        <item name="android:textSize">@dimen/large_text</item>
    </style>

    <style name="mediumLabel" parent="myEmployeesLabel">
        <item name="android:textSize">@dimen/medium_text</item>
    </style>
    <style name="filterTagTextView" parent="mediumLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:gravity">start</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/textBlack2</item>
    </style>

    <style name="employeeDetailsTagTextView" parent="mediumLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="employeeDetailsTextView" parent="mediumLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textColor">@color/textBlack2</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="employeeDetailsContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:background">@color/activityBackground</item>
    </style>

    <style name="smallLabel" parent="myEmployeesLabel">
        <item name="android:textSize">@dimen/small_text</item>
    </style>

    <style name="xsmallLabel" parent="myEmployeesLabel">
        <item name="android:textSize">@dimen/xsmall_text</item>
    </style>

    <style name="myEmployeesEditText">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:capitalize">sentences</item>
        <item name="android:paddingLeft">@dimen/medium_textBox_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/medium_textBox_horizontal_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/myemployees_edittext_background</item>
    </style>

    <style name="mediumEditText" parent="myEmployeesEditText">
        <item name="android:layout_height">@dimen/medium_textbox_height</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="filterEditText" parent="mediumEditText">
        <item name="android:inputType">number</item>
        <item name="android:background">@drawable/myemployees_edittext_background</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="loginEditText" parent="mediumEditText">
        <item name="android:background">@drawable/myemployees_login_edittext_background</item>
    </style>

    <style name="myEmployeesButton">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:paddingLeft">@dimen/medium_button_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/medium_button_horizontal_padding</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/myemployees_button_background</item>
        <item name="android:textColor">@color/textWhite</item>
    </style>

    <style name="mediumButton" parent="myEmployeesButton">
        <item name="android:layout_height">@dimen/medium_button_height</item>
    </style>

    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">#dddddd</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">17sp</item>
        <item name="android:background">@color/textBlack</item>
        <item name="android:color">#cccccc</item>
    </style>

    <style name="DialogTheme">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom</item>
    </style>

    <style name="loadingDialogTheme" parent="DialogTheme">
        <item name="android:clickable">false</item>
    </style>


    <style name="loadingSpinner" parent="android:Widget.Holo.ProgressBar">
        <item name="android:textColorPrimary">@color/colorTransParent</item>
        <item name="android:textColor">#daac56</item>
        <item name="android:background">@color/colorTransParent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="genderRadioBtn" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/textWhite</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:stepSize">@dimen/medium_plus_font_size</item>
    </style>
</resources>