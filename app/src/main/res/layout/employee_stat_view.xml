<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/employeeDetailsContainer">

    <TextView
        style="@style/employeeDetailsTagTextView"
        android:layout_alignParentTop="true"
        android:text="@string/emailTag"
        android:id="@+id/lblTag"/>

    <TextView
        style="@style/employeeDetailsTextView"
        android:id="@+id/lblValue"
        android:layout_toEndOf="@+id/lblTag"
        android:layout_toRightOf="@+id/lblTag"
        android:layout_toLeftOf="@+id/imgShev"
        android:layout_toStartOf="@+id/imgShev"/>

    <ImageView
        android:id="@+id/imgShev"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/employee_shev"/>

</RelativeLayout>